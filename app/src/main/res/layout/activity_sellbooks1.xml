<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Categories">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/knowledgetrove"></ImageView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="250dp"
            android:background="@color/black">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sellbook1a"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:fontFamily="sans-serif-black"
                android:padding="25dp"
                />

            <Button
                android:id="@+id/listofallbooks"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000" />
            <ImageView
                android:layout_width="190dp"
                android:layout_height="220dp"
                android:src="@drawable/sellbooks1"
                android:layout_alignParentRight="true"
                />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="250dp"
            android:background="@color/black">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sellbook1b"

                android:textColor="@color/white"
                android:textSize="20sp"
                android:fontFamily="sans-serif-black"
                android:padding="25dp"
                android:layout_alignParentRight="true"
                />

            <Button
                android:id="@+id/addanewbookbtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                 />
            <ImageView
                android:layout_width="190dp"
                android:layout_height="220dp"
                android:src="@drawable/sellbook1b"

                android:layout_alignParentLeft="true"
                />


        </RelativeLayout>




    </LinearLayout>
</ScrollView>